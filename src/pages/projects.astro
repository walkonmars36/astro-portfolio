---
import projectData from "../data/project-data.json";
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactMe from "../components/ContactMe.astro";
---

<BaseLayout>
  <div class="page container space-xl">
    <section class="flex space-between align-center">
      <h1 class="underline">Projects</h1>
      <span>
        <ContactMe />
      </span>
    </section>
    <main class="two-columns">
      {
        projectData.map(({ id, title, images, tech }) => (
          <div class="project  space-xl">
            <a href={`/project-detail/${id}`}>
              {" "}
              <img src={images.small} alt={title} />
            </a>
            <h3 class="space-s">{title}</h3>
            <ul class="flex" role="list">
              {tech.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
            <div class="project__links space-s flex space-around">
              <a href={`/project-detail/${id}`}>View Project</a>
              <a href="/">View Code</a>
            </div>
          </div>
        ))
      }
    </main>
  </div>
</BaseLayout>

<style>
  .page {
    max-width: 60rem;
  }
  .project {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 760px) {
    .project {
      width: 45%;
    }

    .two-columns {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }
  }
</style>
