---
import profileMobile from "/assets/images/image-profile-mobile.png";

import profileTablet from "/assets/images/image-profile-tablet.png";

import profileDesktop from "/assets/images/image-profile-desktop.png";
---

<picture class="fade">
  <source media="(max-width: 425px)" srcset={profileMobile} type="image/png" />

  <source
    media="(min-width: 426px) and (max-width: 768px)"
    srcset={profileTablet}
    type="image/png"
  />

  <source media="(min-width: 769px)" srcset={profileDesktop} type="image/png" />

  <img src={profileMobile} alt="Profile of Mark Lawson" />
</picture>

<style lang="scss">
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .fade {
    animation: fadeIn 3s ease-in-out;
  }

  @media (max-width: 425px) {
    picture {
      img {
        width: 90%;
        margin-inline: auto;
      }
    }
  }
</style>
