    experience: "3 years",
  },
  {
    name: "React",
    icon: "",
    experience: "2 years",
  },
  {
    name: "Nextjs",
    icon: "",
    experience: "6 months",
  },
  {
    name: "Astro",
    icon: "",
    experience: "6 months",
  },
  {
    name: "WordPress",
    icon: "",
    experience: "5 + years",
  },
  {
