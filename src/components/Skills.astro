---

<section class="container space-xl">
  <h2 class="space-xl uppercase">Skills</h2>
  <ul class="skills-list space-l">
    {
      skills.map((skill) => (
        <li class="skills-list-item flex column">
          {skill.name} <span>{skill.experience}</span>
        </li>
      ))
    }
  </ul>
</section>

<style lang="scss">
  .skills-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(13rem, 1fr));
    grid-gap: var(--space-l);

    &-item {
      border: 1px solid var(--clr-lilac);
      border-radius: 0.5rem;
      font-size: var(--step-2);
      font-weight: 700;
      padding: 0.7em;
    }
  }

  span {
    font-size: var(--step-0);
    font-weight: 300;
    opacity: 0.8;
  }

  h2::after {
    content: " - an evergrowing list !";
    text-transform: lowercase;
    font-size: var(--step-0);
  }
</style>
