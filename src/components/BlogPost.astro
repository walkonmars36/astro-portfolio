---
const { date, url, title, description, tags, image } = Astro.props;
---


  <article data-tags={tags} class="blog-item">
    
      <a href={url}>
        <img src={image} alt={title} /></a>
        <h3 class="blog-title">{title}</h3>
        <div>
          <time datetime={date}>{date}</time>
        </div>
      

      <div>{description}</div>
   
  </article>


  <style>
    li {
      list-style-type: none;
    }

    .blog-item {
      margin-top: var(--space-2xl);
    }

    .blog-title {
      margin-top: var(--space-m);
    }

    .post-title {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: 0.5em;
      padding: 0.5em 1em;
      font-size: 1.15em;
      background-color: #f8fcfd;
    }

    article::after {
        content: '';
        display: block;
        border-bottom: 1px solid var(--clr-lilac);
        margin-top: var(--space-2xl);
    }

  </style>

